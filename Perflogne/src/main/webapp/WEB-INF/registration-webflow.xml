<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
                          
    <var name="userReg" class="com.perfume.model.UserReg" />
	<!-- <var name="shippingAddress" class="com.perfume.model.ShippingAddress" />
	<var name="billingAddress" class="com.perfume.model.BillingAddress" /> -->
	
	<!-- Executed when webFlow is triggered -->
	<on-start>
		<evaluate expression="registrationHandler.initFlow()" result="flowScope.userReg" />
	</on-start>
	
	<view-state id="start" view="UserRegForm" model="userReg">
	<!-- <transition on="submit" to="validate" />
	<transition on="reset" to="reset" /> -->
	</view-state>
	
	<end-state id="registrationSuccessful" view="RegisterSuccess" />
	<end-state id="login" view="LoginForm" />
	<end-state id="home" view="index" />
	
	</flow>